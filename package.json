{
  "name": "publish-claude",
  "version": "1.0.0",
  "description": "CLI tool to list and export Claude Code sessions to markdown",
  "type": "module",
  "bin": {
    "publish-claude": "./dist/index.js"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
